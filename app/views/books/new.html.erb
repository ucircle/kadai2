<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    
  </thead>
  
<tbody>
  
<% @books.each do |book| %>

   <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "show", book_path(book.id) %></td>
     <td><%= link_to "edit", edit_book_path(book.id) %></td>
     <td><%= link_to "destroy", book_path(book.id) %></td>
   </tr>
<% end %>
  
  
</tbody>
  
</table>

  
  






<%= form_with model: @book do |f| %>
<h2>New Book</h2>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>