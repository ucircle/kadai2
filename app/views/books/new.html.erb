<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    
  </thead>
  
<tbody>
  
<% @books.each do |book| %>

   <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "show", book_path(book.id) %></td>
     <td><%= link_to "edit", edit_book_path(book.id) %></td>
     <td><%= link_to "desroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
   </tr>
<% end %>
  
  
</tbody>
  
</table>


  
  
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>





<%= form_with model: @book do |f| %>
<h2>New Book</h2>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>